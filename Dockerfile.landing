FROM node:20-alpine

WORKDIR /app

# Install serve globally
RUN npm install -g serve

# Create directory structure
RUN mkdir -p public/html

# Copy the landing page template
COPY templates/landing/index.html public/html/
COPY templates/landing/style.css public/html/

EXPOSE 8080
CMD ["serve", "-s", "public/html", "-l", "8080"]
